@model IList<Entry>

@*<h3 class="page-header">Entry Log</h3>*@
<br />
<br />

@if (Model.Count == 0)
{
    <h4>There are no beers in your log yet.</h4>
    <p><a asp-controller="Home" asp-action="Index" role="button" class="btn btn-primary">Add a Beer</a></p>
}
else
{
    <div class="list-group">
        @foreach (var entry in Model.Reverse())
        {
        <a href="/Beer?id=@entry.Beer.ReferenceID" class="list-group-item">
            <h4 class="list-group-item-heading">@entry.Beer.Name</h4>
            <h6>Rating: @entry.Rating out of 5 (Site Average: @String.Format("{0:0.#}", entry.Beer.AvgRating) out of 5)</h6>
            @if (entry.Review != null)
            {
                <p class="list-group-item-text">Review: @entry.Review</p>
            }
            @if (entry.UserComments != null)
            {
                <p class="list-group-item-text">Comments: @entry.UserComments</p>
            }
            @if (entry.Location != null)
            {
                <p class="list-group-item-text">Purchase Location: @entry.Location</p><br />
            }
            <small class="list-group-item-text">Added on: @entry.TimeStamp</small>
        </a>
        }
    </div>
    <p><a asp-controller="Home" asp-action="Index" role="button" class="btn btn-primary">Add Another Beer</a></p>
}


