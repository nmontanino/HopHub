@model IList<Entry>

<h3 class="page-header">Entry Log</h3>

@if (Model.Count == 0)
{
    <h4>There are no beers in your log yet.</h4>
    <p><a asp-controller="Home" asp-action="Index" role="button" class="btn btn-primary">Add a Beer</a></p>
}
else
{
    <table class="table table-hover">
        <tr>
            <th>Name</th>
            <th>User Rating</th>
            <th>Average Rating</th>
            <th>Comments</th>
            <th>Location</th>
            <th>Timestamp</th>
        </tr>

    @foreach (var entry in Model)
    {
        <tr>
            <td><a href="/Beer?id=@entry.Beer.ReferenceID">@entry.Beer.Name</a></td>
            <td>@entry.Rating</td>
            <td>@String.Format("{0:0.#}", entry.Beer.AvgRating)</td>
            <td>@entry.UserComments</td>
            <td>@entry.Location</td>
            <td>@entry.TimeStamp</td>
        </tr>
    }
    </table>
    <p><a asp-controller="Home" asp-action="Index" role="button" class="btn btn-primary">Add Another Beer</a></p>
}
