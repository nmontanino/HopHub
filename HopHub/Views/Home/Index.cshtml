@model IList<Beer>

@using System.Linq
@{
    ViewData["Title"] = "HopHub";
}
<br />
<br />
<br />
<div class="row">
    <div class="col-sm-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">Highest Rated Beers</h4>
            </div>

            <div class="list-group">
                @foreach (var beer in Model.Take(10))
                {
                    <a href="/Beer?id=@beer.ReferenceID" class="list-group-item">
                        <span class="badge">@String.Format("{0:0.#}", beer.AvgRating) ★</span>
                        <p class="list-group-item-text">@beer.Name</p>
                       
                    </a>
                }
            </div>
        </div>
    </div>
    @*<div class="col-sm-4 col-sm-offset-4">*@
    <div class="col-sm-4">
        <div class="thumbnail">
            <br />
            <img src="~/images/noun_3235_cc-gry2-lg.svg" />
            <div class="caption">
                <h1 id="mainLogo">HopHub</h1>
                <p id="mainLogo">Your Craft Beer Directory</p>
                <form asp-controller="Home" asp-action="Search" method="get">
                    <div class="input-group">
                        <input type="search" class="form-control beer" name="beer" placeholder="Search for beer...">
                        <span class="input-group-btn">
                            <button class="btn btn-success" type="submit">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">Recent User Reviews</h4>
            </div>
            <div class="list-group">
                @foreach (var review in ViewBag.recent)
                {
                    <a href="/Beer?id=@review.Beer.ReferenceID" class="list-group-item">
                        <span class="badge">@review.Rating ★</span>
                        <h4 class="list-group-item-heading">@review.Beer.Name</h4>
                        <p class="list-group-item-text">@review.Review</p>
                        <small class="list-group-item-text">- @review.ApplicationUser.UserName at @review.TimeStamp</small>
                    </a>
                }
            </div>
        </div>
    </div>
</div>





